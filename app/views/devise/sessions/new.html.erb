<div class="flex justify-between">
  <div class="underline text-xs">
    Back to Shopping
  </div>
  <div>
    <%= link_to image_tag("https://www.aritzia.com/on/demandware.static/Sites-Aritzia_US-Site/-/default/dw9248a3f4/images/aritzia_skin/aritzia_logo.svg", width: 106, height: 21), root_path%>
  </div>
  <div class="underline text-xs">
    Need Help?
  </div>
</div>

<div class="flex justify-center mt-12 ml-12">
  SIGN IN OR CREATE AN ACCOUNT TO UNLOCK:
</div>

<div class="flex ml-16 mt-10 text-xs">
    <div class="flex justify-center w-1/5">
      <div class="mr-4">
        Free shipping
      </div>
      <div>
        <%= image_tag("https://www.aritzia.com/on/demandware.static/-/Library-Sites-Aritzia_Shared/default/dw7cb46db8/2021/87-value-props/shared/icon-free-shipping.svg", width: 19, height: 17) %>
      </div>
    </div>
    <div class="flex justify-center w-1/5">
      <div class="mr-4">
        Private Sales
      </div>
      <div>
        <%= image_tag("https://www.aritzia.com/on/demandware.static/-/Library-Sites-Aritzia_Shared/default/dw47166160/2021/87-value-props/shared/private-sale.svg", width: 19, height: 17) %>
      </div>
    </div>
    <div class="flex justify-center w-1/5">
      <div class="mr-4">
        Express checkout
      </div>
      <div>
        <%= image_tag("https://www.aritzia.com/on/demandware.static/-/Library-Sites-Aritzia_Shared/default/dw105e6518/2021/87-value-props/shared/express-checkout.svg", width: 19, height: 17) %>
      </div>
    </div>
    <div class="flex justify-center w-1/5">
      <div class="mr-4">
        My List
      </div>
      <div>
        <%= image_tag("https://www.aritzia.com/on/demandware.static/-/Library-Sites-Aritzia_Shared/default/dw79bcf17a/2021/87-value-props/shared/my-list.svg", width: 19, height: 17) %>
      </div>
    </div>
    <div class="flex justify-center w-1/5">
      <div class="mr-4">
        Order Tracking
      </div>
      <div>
        <%= image_tag("https://www.aritzia.com/on/demandware.static/-/Library-Sites-Aritzia_Shared/default/dw67b15862/2021/87-value-props/shared/order-tracking.svg", width: 19, height: 17) %>
      </div>
    </div>
</div>

<div class="flex">
  <div class="w-1/3"></div>
  <div class="w-1/3">
    <div class="ml-6 mt-12 text-xs">
      Sign In
    </div>
    <div class="flex border border-gray-400 ml-6 mt-4 hover:shadow-lg transition ease-in-out">
    <span class= "flex items-center ml-2"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <g> <path d="M12 24.0016C18.6274 24.0016 24 18.629 24 12.0016C24 5.3742 18.6274 0.00162125 12 0.00162125C5.37258 0.00162125 0 5.3742 0 12.0016C0 18.629 5.37258 24.0016 12 24.0016Z" fill="#1977F3"></path>
        <path d="M16.6711 15.4712L17.2027 12.0017H13.8749V9.75053C13.8749 8.80214 14.3389 7.87568 15.8307 7.87568H17.3444V4.92251C17.3444 4.92251 15.9708 4.68795 14.6579 4.68795C11.9173 4.68795 10.1252 6.34847 10.1252 9.35733V12.0017H7.07751V15.4712H10.1252V23.8566C10.7361 23.9527 11.3621 24.0017 12 24.0017C12.6379 24.0017 13.264 23.9511 13.8749 23.8566V15.4712H16.6711Z" fill="white"></path></g>
        </svg>
        </span>
      <div class="text-sm py-4 pl-20">
        Continue with Facebook
      </div>
    </div>
    <div class="relative flex ml-6 my-4 items-center">
      <div class="flex-grow border-t border-gray-400"></div>
      <span class="flex-shrink mx-4 text-gray-400 text-sm">
        or
      </span>
      <div class="flex-grow border-t border-gray-400"></div>
    </div>

    <div class="ml-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="flex mb-4 field h-12">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address", class: "w-full text-xs px-2 border border-gray-400 rounded" %>
        </div>
        <div class="flex mb-4 field h-12">
          </br><%= f.password_field :password, autocomplete: "current-password", placeholder: "Password (8-20 characters)", class: "w-full text-xs px-2 border border-gray-400 rounded" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign In", class: "w-full bg-black text-white h-14 text-xs cursor-pointer hover:shadow-xl hover:opacity-90 transition ease-in-out" %>
        </div>
      <% end %>
    </div>
    <div class="flex ml-6 mt-4 justify-between text-xs">
      <div class="underline">
        <%= link_to "Forgot Password?",  new_user_password_path %>
      </div>
      <div class="underline">
        <%= link_to "Create an Account", new_user_registration_path %>
      </div>
    </div>
  </div>

  <div class="w-1/3"></div>
</div>







