
<div class = "flex space-x-16">
    <div class="w-1/2">
        <%= image_tag(@product.image, class: "product-image mb-2", width: '100%') %>
    </div>
    <div class = "w-1/4">
        <div>
            <%= @product.brand %>
        </div>
        <div class= "flex justify-between text-3xl">
            <div class = "">
                <%= @product.name %>
            </div>
            <div class= "">
                $<%= @product.price %>
            </div>
        </div>
        <div>
            <%= @product.product_type %>
        </div>
        <div class="flex space-x-5 mt-16">
            <% @colors.each do |color| %> 
                <div class= "rounded-full w-8 h-8 hover:border-black border-2 " style="background-color: <%= color.value %>"> </div>
            <% end %>
        </div>
        <div class = "mt-10 flex justify-between">
            <div>
                Model is 5'9"/175 cm wearing a size S
            </div>
            <div class="underline cursor-pointer">
                Find Your Size
            </div>
        </div>
        <div class="flex justify-between items-center border-2 border-black h-14 mt-2 px-5 cursor-pointer">
            <div>
                Select a Size
            </div>
            <div>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                </svg>
            </div>
        </div>
        <div class="flex justify-between bg-black h-14 mt-2 cursor-pointer ">
            <div class="w-11/12 pl-5 pt-4 h-full text-white border-r-2 border-white">
                Add to Bag - $<%= @product.price %>
            </div>
            <div class="w-1/12 pl-3 pt-4 h-full text-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
                </svg>
            </div>

        </div>
    </div>
</div>

