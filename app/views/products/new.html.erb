<%= form_for @product do |form | %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :brand %><br>
    <%= form.text_field :brand %>
  </div>

  <div>
    <%= form.label :product_type %><br>
    <%= form.text_field :product_type %>
  </div>

  <div>
    <%= form.label :image %><br>
    <%= form.file_field :image, direct_upload: true %>
 </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>