<div class="flex justify-left mb-24">
  <div class="flex mr-2 hover:underline">
    <%= link_to "New", 'products#index' %>
  </div>
  <div class="flex mx-2 hover:underline">
    <%= link_to "Clothing", 'products#index' %>
  </div>
  <div class="flex mx-2 hover:underline">
    <%= link_to "Back In", 'products#index' %>
  </div>
  <div class="flex mx-2 hover:underline">
    <%= link_to "Brands", 'products#index' %>
  </div>
</div>

<div class="text-sm mb-3">
  Act fast - before someone else does. 
</div>

<div class="text-xs">
  Nothing's worse than "sold out", so make it official before it's too late.
</div>

<div class="mt-12 pb-4 text-lg">
  My Bag
</div>

<div class="flex">
  <div class="flex w-2/3 py-6 border-y-2 mb-10">
    <% @products.each do |product| %>
      <div class="flex">
        <div class="flex">
          <div>
            <%= link_to image_tag(product.image, class: "product-image mb-2", width: 114, height: 155), product_path(product) %>            
          </div>

          <div class="product-details mx-3 flex flex-col justify-between text-xs">
            <div class="flex flex-col">
              <div class="mb-2">
                <%= link_to product.brand, product_path(product) %>
              </div>                
              <div class="mb-2">
                <%= link_to product.name, product_path(product) %>
              </div>
              <div>
                $<%= product.price %>
              </div>
            </div>
            <div class="flex flex-col text-gray-500">
              <div>
                <form method="post" action="/favorites?product_id=<%= product.id %>">
                <button type="submit" class="underline mb-2">
                  Move to List
              </div>
              <div>
                #98074
              </div>
            </div>
          </div>
        </div>
          
        <div class="text-xs">
          Heather Oat Beige
        </div>

        <div class="text-gray-400 text-sm">
          <%= @cart_products.detect { |cp| cp.product_id == product.id }.quantity %> in cart
        </div>



        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>

      </div>
    <% end %>
  </div>

  



  <div class="w-1/3 bg-summary p-4 mx-12">
    <div class="border-b-2 p-6">
      <div class="mb-4">
          Order Summary
      </div>
      <div class="flex justify-between text-sm mb-2">
        <div>
          Deliver to me (<%=@cart.products.count %>) 
        </div>
        <div>
          $<%= @cart_subtotal %>
        </div>
      </div>

      <div class="flex justify-between text-sm mb-2">
        <div>
          Shipping estimate 
        </div>
        <div>
          Free
        </div>
      </div>

      <div class="flex justify-between text-sm mb-2">
        <div>
          Taxes estimate
        </div>
        <div>
          $<%= @tax.round(2) %>
        </div>
      </div>
    </div>

    <div class="flex justify-between text-sm mb-2 mt-4 p-4">
      <div>
        Estimated Total
      </div>
      <div>
        $<%= (@cart_subtotal + @tax).round(2) %>
      </div>
    </div>

    <div class="flex items-center justify-center bg-black text-white h-14 cursor-pointer hover:opacity-90 transition ease-in-out">
      Checkout
    </div>
  </div>
</div>