<div class="flex justify-left mb-24">
  <div class="flex mr-2 hover:underline">
    <%= link_to "New", 'products#index' %>
  </div>
  <div class="flex mx-2 hover:underline">
    <%= link_to "Clothing", 'products#index' %>
  </div>
  <div class="flex mx-2 hover:underline">
    <%= link_to "Back In", 'products#index' %>
  </div>
  <div class="flex mx-2 hover:underline">
    <%= link_to "Brands", 'products#index' %>
  </div>
</div>

<div class="text-sm mb-3">
  Act fast - before someone else does. 
</div>

<div class="text-xs">
  Nothing's worse than "sold out", so make it official before it's too late.
</div>

<div class="mt-12 pb-4 text-lg">
  My Bag
</div>

<div class="flex"> 
  <div class="flex flex-col w-2/3 mb-10 border-t-2">
    <% @products.each do |product| %>
      <div class="">
        <div class="flex justify-between h-min py-6 border-b-2">
          <div class="img">
            <%= link_to image_tag(product.image, class: "product-image mb-2", width: 114, height: 155), product_path(product) %>            
          </div>
          <div class="flex flex-col justify-between">
            <div class="flex flex-col">
              <%= link_to product.brand, product_path(product) %>
              <%= link_to product.name, product_path(product) %>
              $<%= product.price %>
            </div>
            <div>
              <div>
                <form method="post" action="/favorites?product_id=<%= product.id %>">
                  <button type="submit" class="underline mb-2">
                    Move to List
              </div>
              <div>
                #98074
              </div>
            </div>
          </div>


          <div class="flex flex-col">
            <div>
              Heather Oat Beige
            </div>
            <div>
              Size 4
            </div>
            <div>
              Edit
            </div>
          </div>


          <div>
            <div class="text-gray-400 text-sm">
              <% if @cart_products.length > 0 %>
              <%= @cart_products.detect { |cp| cp.product_id == product.id }.quantity %> in cart
              <% end %>
            </div>
          </div>

          <div >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </div>

        </div>
      </div>
    <% end %>
  </div>

  <div class="w-1/3 bg-summary p-4 mx-12">
    <div class="border-b-2 p-6">
      <div class="mb-4">
        Order Summary
      </div>
      <div class="flex justify-between text-xs mb-2">
        <div>
          Deliver to Me (<%=@products.count %>) 
        </div>
        <div>
          $<%= @cart_subtotal %>
        </div>
      </div>

      <div class="flex justify-between text-xs mb-2">
        <div>
          Shipping estimate 
        </div>
        <div>
          Free
        </div>
      </div>

      <div class="flex justify-between text-xs mb-2">
        <div>
          Taxes estimate
        </div>
        <div>
          $<%= @tax.round(2) %>
        </div>
      </div>
    </div>

    <div class="flex justify-between text-xs mb-2 mt-4 p-4">
      <div>
        Estimated Total
      </div>
      <div>
        $<%= (@cart_subtotal + @tax).round(2) %>
      </div>
    </div>

    <%= link_to "Checkout", "/checkouts/new", class: "flex items-center justify-center bg-black text-white h-14 cursor-pointer hover:opacity-90 transition ease-in-out" %>
  </div>
</div>




<div class="flex">
  <div class="flex justify-between  mb-12 p-4 w-2/3 bg-summary text-black">
    <div class="mx-4">
      <div class="mb-2">
        Free Shipping
      </div>
      <div>
        Free standard shipping when signed into your Aritzia account.
      </div>
      <div class="underline">
        <%= link_to "Details", '/users/sign_in' %>
      </div>
    </div>
    <div>
      <div class="mb-2">
        Free & Easy Returns
      </div>
      <div>
        Easily return your online purchaces for free by mail or at any Aritzia boutique.
      </div>
      <div class="underline">
        <%= link_to "Details", '/users/sign_in' %>
      </div>
    </div>
    <div>
      <div class="mb-2">
        Secure Payment
      </div>
      <div>
        We accept most credit cards, PayPal, Apple Pay and gift cards.
      </div>
      <div class="underline">
        <%= link_to "Details", '/users/sign_in' %>
      </div>
    </div>
  </div>
  <div class="w-1/3 mx-12">
  </div>
</div>
