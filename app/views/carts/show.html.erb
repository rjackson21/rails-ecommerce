<div class="flex justify-left mb-24">
  <div class="flex mr-2 hover:underline">
    <%= link_to "New", 'products#index' %>
  </div>
  <div class="flex mx-2 hover:underline">
    <%= link_to "Clothing", 'products#index' %>
  </div>
  <div class="flex mx-2 hover:underline">
    <%= link_to "Back In", 'products#index' %>
  </div>
  <div class="flex mx-2 hover:underline">
    <%= link_to "Brands", 'products#index' %>
  </div>
</div>

<div class="text-sm mb-3">
  Act fast - before someone else does. 
</div>

<div class="text-xs">
  Nothing's worse than "sold out", so make it official before it's too late.
</div>

<div class="mt-12 pb-4 text-lg">
  My Bag
</div>

<div class="flex">
  <div class="w-2/3 py-6 border-t-2">
    <div class="products-grid flex flex-wrap space-x-2 ">
      <% @products.each do |product| %>
        <div class="flex mb-5">
          <div>
            <%= link_to image_tag(product.image, class: "product-image mb-2", width: 106, height: 145), product_path(product) %>
          </div>

          <div class="product-details mx-3 flex flex-col justify-between text-xs">
              <div class="flex flex-col">
                <%= link_to product.brand, product_path(product) %>
                <%= link_to product.name, product_path(product) %>
                $<%= product.price %>
              </div>
              <div class="flex flex-col">
                <div>
                  <form class="favorite-ribbon" method="post" action="/favorites?product_id=<%= product.id %>">
                  <button type="submit">
                  Move to List
                </div>
                <div>
                #98074
                </div>
              </div>
          </div>

            <div class="mt-3 text-gray-400 text-sm">
              <%= @cart_products.detect { |cp| cp.product_id == product.id }.quantity %> in cart
            </div>

        </div>
      <% end %>
    </div>
  </div>


  <div class="w-1/3">
  Y
  </div>
</div>













  <h2>
    Subtotal: <%= @cart_subtotal %>
  </h2>